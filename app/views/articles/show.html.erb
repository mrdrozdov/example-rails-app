<%= render "header" %>

<h1><%= @article.title %></h1>

<p><%= "by #{User.find_by_id(@article.user_id).username}" %></p>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<% if logged_in? %>
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
<% end %>
