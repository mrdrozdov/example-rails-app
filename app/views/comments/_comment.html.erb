<% unless comment.archived? %>
<div style="padding: 4px;">

    <div>
        <span style="font-size: 16px; font-weight: normal;"><%= "#{comment.body}" %></span>
    </div>
    <div>
        <span style="font-size: 10px; font-weight: normal;"><%= "Posted by #{User.find_by_id(comment.user_id).username}" %></span>
        <span style="font-size: 10px; font-weight: normal;"><%= "[#{comment.created_at}]" %></span>

        <% if logged_in? && current_user.id == comment.user_id %>
        <span style="font-size: 10px; font-weight: normal;"><%= link_to "Delete", [comment.article, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %></span>
        <% end %>
    </div>
</div>
<% end %>
